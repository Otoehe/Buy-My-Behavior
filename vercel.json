{
  "rewrites": [
    { "source": "/assets/:path*", "destination": "/assets/:path*" },
    { "source": "/sw.js", "destination": "/sw.js" },
    { "source": "/favicon.ico", "destination": "/favicon.ico" },
    { "source": "/robots.txt", "destination": "/robots.txt" },
    { "source": "/manifest.webmanifest", "destination": "/manifest.webmanifest" },
    { "source": "/service-worker.js", "destination": "/service-worker.js" },
    { "source": "/(.*\\.(?:js|css|png|jpg|jpeg|gif|svg|ico|txt|json|webmanifest|map|mp4|webm|wav|mp3|woff|woff2|ttf|otf))", "destination": "/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
